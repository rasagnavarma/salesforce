            <script>
            
            function display(){
                Visualforce.remoting.Manager.invokeAction(
                    '{!$RemoteAction.StudentController.display}',
                    function(result, event){
                        var tab= '';
                        
                        for(i=0;i<result.length;i++){
                            //tab+='<tr>''<td>'+result[i]+'</td>''</tr>';
                            tab+= '<tr><td>'+result[i].Name+'</td><td>'+result[i].type__c+'</td><td></td></tr>';
                            // tab.push(result[i].Name,result[i].type__c);
                        }
                        $('#Print').html(tab);

                    }, 
                    {escape: true}
                );
                
            }
            $(document).ready(function(){
                $("#open").click(function(){
                    $("#hi").toggle();
                });                
                getPickListVal();
                display();
            });
            function sendData(){
                var stor=$("#text-input-id-1").val();
                var typestr=$("#select-01").val();
                Visualforce.remoting.Manager.invokeAction(
                    '{!$RemoteAction.StudentController.getsendingData}',
                    stor,typestr,                    
                    function(result, event){
                        alert(result);
                        if(result){
                            display();
                        }else{
                            
                        }
                    });
            };
            function getPickListVal() {                
                Visualforce.remoting.Manager.invokeAction(
                    '{!$RemoteAction.StudentController.getList}',
                    function(result, event)
                    {
                        if(event.status)
                        {
                            console.log(result);
                            var ident='<option value="None">None</option>';
                            for (i = 0; i < result.length; i++) { 
                                console.log(result[i]);
                                ident+='<option value="'+result[i]+'">'+result[i]+'</option>';
                            }
                            $('#select-01').html(ident);
                        }
                    },
                    {escape: true}
                );
            }
            function canceling(){
                $("#hi").hide();
             $('#text-input-id-1').val('')
			$('#select-01').val('None');
                
            }
            function clicking(){
                var stor=$("#text-input-id-1").val();
                var typestr=$("#select-01").val();
                if(stor==''){
                    alert("Fill name");
                }
                else if(typestr=='None'){
                    alert("Fill type");
                  
                }
                    else{
                        sendData();
              $('#text-input-id-1').val('')
			$('#select-01').val('None');
                        canceling();

                        
                    }
 
            } 
            
           
            </script>
